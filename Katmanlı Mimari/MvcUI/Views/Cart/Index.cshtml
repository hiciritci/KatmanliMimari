@model CartListViewModel
<h2>Sepetiniz</h2>
<table class="table table-responsive">
    @foreach (var cartLine in Model.Cart.CartLines)
    {
        <thead>
            <tr>
                <th>Id</th>
                <th>Ürün Adı</th>
                <th>Açıklama</th>
                <th>Fiyat</th>
                <th>Stok Adedi</th>
                <th>Satış adedi</th>
                <th>Id</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@cartLine.Product.ProductId </td>
                <td>@cartLine.Product.ProductName </td>
                <td>@cartLine.Product.QuantityPerUnit </td>
                <td>@cartLine.Product.UnitPrice </td>
                <td>@cartLine.Product.UnitsInStock </td>
                <td>@cartLine.Quantity </td>
                <td><a class="btn btn-sm btn-danger" asp-controller="Cart" asp-action="RemoveToCart" asp-route-productId="@cartLine.Product.ProductId">SİL</a>
                </td>

            </tr>
        </tbody>
    }
</table>

